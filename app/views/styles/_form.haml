.col-md-8
  =form_for @style do |f|
    %table.table.table-striped
      %tr
        %th= f.label(:name)
        %td= f.text_field(:name, class: 'form-control')
      %tr
        %th= f.label(:description)
        %td= f.text_field(:description, class: 'form-control')
    = f.submit('Send', class: 'btn btn-primary')
    = link_to("Back", { action: "index" }, class: 'btn btn-warning')
  %br
  = render partial: 'validation_errors', locals: { zone: @style }